extends layout

block content
	article
		header
			aside
				time
					- string date = req.params["day"] ~ "." ~ req.params["month"] ~ ".";
					span= date
					| #{req.params["year"]}
				ul
					- foreach(tag; article.tags)
						li
							a(href="/tag/#{tag}", rel="tag")= tag
			h1= article.title
		section!= article.text
